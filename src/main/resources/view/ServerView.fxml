<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="16" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.newsfx.fhtechnikum.newsfx.controller.ServerController"
      styleClass="root">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="NewsFx Server" styleClass="app-title"/>
    <Label fx:id="statusLabel" text="Starting..." styleClass="meta"/>
    <Label fx:id="portLabel" text="" styleClass="meta"/>
    <Label fx:id="clientsLabel" text="Connected clients: 0" styleClass="meta"/>

    <Label text="Message Log" styleClass="sidebar-section"/>
    <ListView fx:id="logList" VBox.vgrow="ALWAYS" styleClass="news-list"/>

</VBox>
